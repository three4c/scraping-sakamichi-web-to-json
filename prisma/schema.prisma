generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model accounts {
  id                  String  @id
  user_id             String
  type                String
  provider            String
  provider_account_id String
  refresh_token       String? @db.Text
  access_token        String? @db.Text
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String? @db.Text
  session_state       String?

  @@unique([provider, provider_account_id])
  @@index([user_id])
}

model groups {
  id          Int     @id @default(autoincrement())
  order       Int
  user_id     String
  color_id    String
  ticket_date String?

  @@index([user_id, color_id])
}

model sessions {
  id            String   @id
  session_token String   @unique
  user_id       String
  expires       DateTime

  @@index([user_id])
}

model users {
  id             String    @id
  name           String?
  email          String?   @unique
  email_verified DateTime?
  image          String?
}

model verificationtokens {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model colors {
  id   String @id @unique
  name String
}

model members {
  id       Int    @id @default(autoincrement())
  name     String
  hiragana String
  src      String
  href     String
  color_id String

  @@index([color_id])
}

model tickets {
  id       Int    @id @default(autoincrement())
  href     String
  date     String
  text     String
  color_id String

  @@index([color_id])
}

model schedules {
  id         Int     @id @default(autoincrement())
  category   String?
  href       String
  text       String
  color_id   String
  date_id    Int
  date_time  String?
  end_time   String?
  start_time String?

  @@index([color_id, date_id])
}

model member_schedules {
  id          Int @id @default(autoincrement())
  member_id   Int
  schedule_id Int

  @@index([member_id, schedule_id])
}

model dates {
  id   Int    @id @default(autoincrement())
  date String
}
